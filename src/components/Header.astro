---
const pathname = new URL(Astro.request.url).pathname;
// Limpiamos la ruta para saber dónde estamos
const currentPath = pathname.slice(1);
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center h-20">
      
      <a href="/" class="flex flex-col group z-50 relative">
        <span class="text-2xl font-serif font-bold text-gray-800 group-hover:text-pink-600 transition-colors">Manoli</span>
        <span class="text-xs tracking-widest text-pink-500 font-medium uppercase">Pasteles de Pañales</span>
      </a>

      <nav class="hidden md:flex space-x-8">
        <a href="/" class="font-medium text-gray-600 hover:text-pink-600 transition-colors">Inicio</a>
        <a href="/productos" class="font-medium text-gray-600 hover:text-pink-600 transition-colors">Catálogo</a>
        <a href="/sobre-nosotros" class="font-medium text-gray-600 hover:text-pink-600 transition-colors">Sobre Mí</a>
        <a href="/contacto" class="bg-pink-600 text-white px-6 py-2 rounded-full font-bold hover:bg-pink-700 transition shadow-md hover:shadow-lg transform hover:-translate-y-0.5">Contactar</a>
      </nav>

      <button id="menu-btn" class="md:hidden z-50 focus:outline-none p-2 text-gray-600">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>

    </div>
  </div>

  <div id="mobile-menu" class="fixed inset-0 bg-white z-40 flex flex-col items-center justify-center space-y-8 opacity-0 pointer-events-none transition-opacity duration-300">
    <a href="/" class="text-2xl font-serif font-bold text-gray-800 hover:text-pink-600">Inicio</a>
    <a href="/productos" class="text-2xl font-serif font-bold text-gray-800 hover:text-pink-600">Catálogo</a>
    <a href="/sobre-nosotros" class="text-2xl font-serif font-bold text-gray-800 hover:text-pink-600">Sobre Mí</a>
    <a href="/contacto" class="text-2xl font-bold text-pink-600 border-2 border-pink-100 px-8 py-3 rounded-full">Contactar</a>
  </div>
</header>

<script>
  // Script pequeñito para abrir y cerrar el menú sin romper nada
  const btn = document.getElementById('menu-btn');
  const menu = document.getElementById('mobile-menu');

  if (btn && menu) {
    btn.addEventListener('click', () => {
      // Cambiamos la visibilidad
      menu.classList.toggle('opacity-0');
      menu.classList.toggle('pointer-events-none');
    });
    
    // Si pinchan en un enlace, cerramos el menú
    menu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        menu.classList.add('opacity-0');
        menu.classList.add('pointer-events-none');
      });
    });
  }
</script>