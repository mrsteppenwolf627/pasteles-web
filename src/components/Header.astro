<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    
    <a href="/" class="text-2xl font-bold text-pink-500 hover:text-pink-600 transition font-serif">
      Manoli <span class="text-gray-400 text-sm font-sans font-normal ml-1">Pasteles de Pañales</span>
    </a>

    <nav class="hidden md:flex gap-8">
      <a href="/" class="text-gray-600 hover:text-pink-500 font-medium transition">Inicio</a>
      <a href="/productos" class="text-gray-600 hover:text-pink-500 font-medium transition">Catálogo</a>
      <a href="/sobre-nosotros" class="text-gray-600 hover:text-pink-500 font-medium transition">Sobre Mí</a>
      <a href="/contacto" class="bg-pink-500 text-white px-5 py-2 rounded-full hover:bg-pink-600 transition font-bold shadow-md hover:shadow-lg transform hover:-translate-y-0.5">
        Contacto
      </a>
    </nav>

    <button id="menu-btn" class="md:hidden text-gray-600 focus:outline-none p-2">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-100 absolute w-full shadow-xl">
    <nav class="flex flex-col p-4 gap-4 text-center">
      <a href="/" class="text-gray-700 hover:text-pink-500 py-2 border-b border-gray-50">Inicio</a>
      <a href="/productos" class="text-gray-700 hover:text-pink-500 py-2 border-b border-gray-50">Catálogo</a>
      <a href="/sobre-nosotros" class="text-gray-700 hover:text-pink-500 py-2 border-b border-gray-50">Sobre Mí</a>
      <a href="/contacto" class="text-pink-600 font-bold py-2 bg-pink-50 rounded-lg mt-2">
        ¡Encargar Ahora!
      </a>
    </nav>
  </div>
</header>

<script>
  // Seleccionamos los elementos del HTML
  const btn = document.getElementById('menu-btn');
  const menu = document.getElementById('mobile-menu');

  // Si los elementos existen, escuchamos el clic
  if (btn && menu) {
    btn.addEventListener('click', () => {
      // Quitamos o ponemos la clase 'hidden' para mostrar/ocultar
      menu.classList.toggle('hidden');
    });
  }
</script>