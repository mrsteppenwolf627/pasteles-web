---
import Layout from '../layouts/Layout.astro';
import { sanityClient } from 'sanity:client';
import { urlFor } from '../lib/urlFor';

// 1. CONSULTA A SANITY
const products = await sanityClient.fetch(`
  *[_type == "producto" || _type == "product"] | order(_createdAt desc)[0..3] {
    title,
    price,
    "slug": slug.current,
    "mainImage": images[0].asset
  }
`);

// Definimos los datos estructurados para Google (SEO Local)
const schema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "@id": "https://www.xn--manolipastelesdepaales-1ec.com/#business",
  "name": "Manoli Pasteles de Pañales",
  "alternateName": "Manoli Pasteles de Pañales Badalona",
  "image": "https://www.xn--manolipastelesdepaales-1ec.com/imagen-thumbnail2.png",
  "description": "Tienda de pasteles de pañales y canastillas de bebé artesanales en Badalona. Entrega a domicilio y en hospitales (Can Ruti, Quirón). Regalos únicos para recién nacidos.",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Badalona",
    "addressRegion": "Barcelona",
    "postalCode": "08911",
    "addressCountry": "ES"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 41.4469,
    "longitude": 2.2450
  },
  "url": "https://www.xn--manolipastelesdepaales-1ec.com",
  "telephone": "+34678846424",
  "priceRange": "€€",
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
      "opens": "10:00",
      "closes": "20:00"
    }
  ],
  "areaServed": [
    {
      "@type": "City",
      "name": "Badalona",
      "@id": "https://www.wikidata.org/wiki/Q45424"
    },
    {
      "@type": "City",
      "name": "Barcelona",
      "@id": "https://www.wikidata.org/wiki/Q1492"
    }
  ],
  "sameAs": [
    "https://www.instagram.com/grageramanoli"
  ],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Pasteles de Pañales y Canastillas",
    "itemListElement": [
      {
        "@type": "OfferCatalog",
        "name": "Tartas de Pañales"
      },
      {
        "@type": "OfferCatalog",
        "name": "Canastillas de Bebé"
      }
    ]
  },
  "paymentAccepted": ["Efectivo", "Bizum", "Transferencia"],
  "currenciesAccepted": "EUR"
};
---

<Layout 
  title="Pasteles de Pañales en Badalona y Barcelona | Entrega a Domicilio - Manoli"
  description="Tartas de pañales y canastillas artesanales en Badalona. Entrega en mano y a domicilio en hospitales (Can Ruti, Quirón). El regalo perfecto para recién nacidos."
>

  <main>
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />

    <section class="relative bg-pink-50 py-20 px-4 text-center overflow-hidden">
      <div class="max-w-4xl mx-auto relative z-10">
        
        <h1 class="text-4xl md:text-6xl font-bold text-gray-800 mb-4 font-serif leading-tight">
          Pasteles de Pañales en <span class="text-pink-600">Badalona</span> y Barcelona
        </h1>
        
        <p class="text-lg text-pink-500 font-medium mb-6 italic">
          "Regalos que nacen del corazón"
        </p>

        <p class="text-xl text-gray-600 mb-8 leading-relaxed max-w-2xl mx-auto">
          Creamos <strong>tartas de pañales</strong> y canastillas artesanales únicas. 
          Servicio de <strong>entrega en mano a domicilio</strong> en Badalona y Barcelona, o directamente en hospitales (<strong class="text-gray-800">Can Ruti, Quirón</strong>).
          Ahórrate los gastos de envío y asegura un regalo perfecto.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a href="/productos" class="bg-pink-600 text-white px-8 py-3 rounded-full font-semibold hover:bg-pink-700 transition-colors shadow-lg w-full sm:w-auto">
            Ver Catálogo
          </a>
          <a href="/contacto" class="bg-white text-pink-600 border-2 border-pink-100 px-8 py-3 rounded-full font-semibold hover:border-pink-300 transition-colors w-full sm:w-auto">
            Pedir por WhatsApp
          </a>
        </div>
      </div>
      
      <div class="absolute top-0 left-0 w-64 h-64 bg-pink-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 -translate-x-1/2 -translate-y-1/2"></div>
      <div class="absolute bottom-0 right-0 w-64 h-64 bg-purple-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 translate-x-1/2 translate-y-1/2"></div>
    </section>

    <section class="py-16 px-4 bg-white">
      <div class="max-w-6xl mx-auto">
        <div class="flex justify-between items-end mb-10">
          <h2 class="text-3xl font-bold text-gray-800">Catálogo de Tartas y Canastillas</h2>
          <a href="/productos" class="text-pink-600 font-semibold hover:underline hidden md:block">
            Ver todo el catálogo →
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {products.map((product: any) => (
            <a href={`/productos/${product.slug}`} class="group">
              <article class="bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300 overflow-hidden border border-gray-100 h-full flex flex-col">
                <div class="aspect-square overflow-hidden bg-gray-100 relative">
                  {product.mainImage ? (
                    <img 
                      src={urlFor(product.mainImage).width(500).format('webp').url()} 
                      alt={product.title + " - Regalo Bebé Badalona"} 
                      class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-500"
                      loading="lazy"
                      decoding="async"
                    />
                  ) : (
                    <div class="flex items-center justify-center h-full text-gray-400">
                      Sin imagen
                    </div>
                  )}
                </div>
                <div class="p-4 flex-1 flex flex-col justify-between">
                  <h3 class="text-lg font-semibold text-gray-800 mb-1 leading-tight group-hover:text-pink-600 transition-colors">
                    {product.title}
                  </h3>
                  <p class="text-pink-600 font-bold mt-2">
                    {product.price} €
                  </p>
                </div>
              </article>
            </a>
          ))}
        </div>

        <div class="mt-10 text-center md:hidden">
          <a href="/productos" class="text-pink-600 font-semibold hover:underline">
            Ver todo el catálogo →
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>