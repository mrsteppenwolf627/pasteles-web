---
import Layout from '../layouts/Layout.astro';
import { sanityClient } from 'sanity:client';
import { urlFor } from '../lib/urlFor';

// 1. CONSULTA A SANITY (Para traer los últimos 4 productos automáticamente)
const products = await sanityClient.fetch(`
  *[_type == "producto" || _type == "product"] | order(_createdAt desc)[0..3] {
    title,
    price,
    "slug": slug.current,
    "mainImage": images[0].asset
  }
`);
---

<Layout 
  title="Pasteles de Pañales en Badalona | Regalos Bebé Artesanales - Manoli"
  description="Tartas de pañales y canastillas personalizadas hechas a mano en Badalona. El regalo práctico, original y único para recién nacidos. ¡Encarga tu diseño exclusivo!"
>

  <main>
    <section class="relative bg-pink-50 py-20 px-4 text-center overflow-hidden">
      <div class="max-w-3xl mx-auto relative z-10">
        <h1 class="text-4xl md:text-6xl font-bold text-gray-800 mb-6 font-serif">
          Regalos que nacen del corazón
        </h1>
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          Pasteles de pañales y canastillas artesanales hechos a mano en <strong class="text-pink-600">Badalona</strong>. 
          El detalle perfecto para dar la bienvenida al bebé.
        </p>
        <div class="flex gap-4 justify-center">
          <a href="/catalogo" class="bg-pink-600 text-white px-8 py-3 rounded-full font-semibold hover:bg-pink-700 transition-colors shadow-lg">
            Ver Catálogo
          </a>
          <a href="/contacto" class="bg-white text-pink-600 border-2 border-pink-100 px-8 py-3 rounded-full font-semibold hover:border-pink-300 transition-colors">
            Contactar
          </a>
        </div>
      </div>
      
      <div class="absolute top-0 left-0 w-64 h-64 bg-pink-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 -translate-x-1/2 -translate-y-1/2"></div>
      <div class="absolute bottom-0 right-0 w-64 h-64 bg-purple-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 translate-x-1/2 translate-y-1/2"></div>
    </section>

    <section class="py-16 px-4 bg-white">
      <div class="max-w-6xl mx-auto">
        <div class="flex justify-between items-end mb-10">
          <h2 class="text-3xl font-bold text-gray-800">Últimas Creaciones</h2>
          <a href="/catalogo" class="text-pink-600 font-semibold hover:underline hidden md:block">
            Ver todo el catálogo →
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {products.map((product: any) => (
            <a href={`/producto/${product.slug}`} class="group">
              <article class="bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300 overflow-hidden border border-gray-100 h-full flex flex-col">
                <div class="aspect-square overflow-hidden bg-gray-100 relative">
                  {product.mainImage ? (
                    <img 
                      src={urlFor(product.mainImage).width(500).format('webp').url()} 
                      alt={product.title} 
                      class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-500"
                      loading="lazy"
                      decoding="async"
                    />
                  ) : (
                    <div class="flex items-center justify-center h-full text-gray-400">
                      Sin imagen
                    </div>
                  )}
                </div>
                <div class="p-4 flex-1 flex flex-col justify-between">
                  <h3 class="text-lg font-semibold text-gray-800 mb-1 leading-tight group-hover:text-pink-600 transition-colors">
                    {product.title}
                  </h3>
                  <p class="text-pink-600 font-bold mt-2">
                    {product.price}
                  </p>
                </div>
              </article>
            </a>
          ))}
        </div>

        <div class="mt-10 text-center md:hidden">
          <a href="/catalogo" class="text-pink-600 font-semibold hover:underline">
            Ver todo el catálogo →
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>