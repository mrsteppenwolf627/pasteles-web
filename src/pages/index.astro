---
import Layout from '../layouts/Layout.astro';
import { sanityClient } from 'sanity:client';
import { urlFor } from '../utils/image';

let products = [];

try {
  // Traemos los productos (espa√±ol e ingl√©s)
  products = await sanityClient.fetch(`*[_type in ["producto", "product"]] | order(_createdAt desc) [0..5] {
    nombre,
    title,
    slug,
    precio,
    price,
    imagen,
    image
  }`);
  
} catch (error) {
  console.error("Error cargando productos:", error);
}
---

<Layout title="Manoli Pasteles | Regalos Artesanales en Badalona">
  
  <div class="relative bg-pink-50 overflow-hidden">
    <div class="container mx-auto px-4 py-16 md:py-24 relative z-10 flex flex-col items-center text-center">
      <h1 class="text-5xl md:text-7xl font-serif font-bold text-gray-900 mb-6 leading-tight">
        Regalos que nacen del <span class="text-pink-500 italic">coraz√≥n</span>
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 mb-10 max-w-2xl font-light">
        Pasteles de pa√±ales y canastillas artesanales hechos a mano en Badalona.
      </p>
      <a href="/productos" class="bg-pink-500 text-white px-8 py-4 rounded-full text-lg font-bold hover:bg-pink-600 transition shadow-lg hover:shadow-xl transform hover:-translate-y-1">
        Ver Cat√°logo
      </a>
    </div>
  </div>

  <div class="container mx-auto px-4 py-20">
    <div class="flex justify-between items-end mb-12">
      <h2 class="text-3xl md:text-4xl font-serif font-bold text-gray-800">√öltimas Creaciones</h2>
      <a href="/productos" class="text-pink-500 font-bold hover:text-pink-600 hidden md:block">Ver todo ‚Üí</a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
      {(products || []).map((product, index) => {
        // Normalizamos los datos
        const nombreFinal = product.nombre || product.title || "Producto sin nombre";
        const precioFinal = product.precio || product.price;
        const imagenFinal = product.imagen || product.image;
        const link = product.slug?.current ? `/productos/${product.slug.current}` : '#';

        // --- EL CHIVATO ---
        // Esto imprimir√° en la terminal qu√© imagen tiene cada producto
        console.log(`üì¶ Producto ${index + 1} (${nombreFinal}):`, imagenFinal ? "‚úÖ Tiene imagen" : "‚ùå NO tiene imagen", imagenFinal);
        // ------------------
        
        return (
        <a href={link} class="group block">
          <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition duration-300 overflow-hidden border border-gray-100">
            
            <div class="aspect-square overflow-hidden bg-gray-100 relative">
              {imagenFinal ? (
                <img 
                  src={urlFor(imagenFinal).width(600).height(600).url()} 
                  alt={nombreFinal}
                  class="w-full h-full object-cover transform group-hover:scale-105 transition duration-500"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center text-gray-400 bg-pink-50 font-bold">Falta Foto</div>
              )}
              
              <div class="absolute bottom-4 right-4 bg-white/90 backdrop-blur-sm px-4 py-2 rounded-full font-bold text-pink-600 shadow-sm">
                {precioFinal ? precioFinal + '‚Ç¨' : 'Consultar'}
              </div>
            </div>

            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-2 font-serif group-hover:text-pink-500 transition">
                {nombreFinal}
              </h3>
              <span class="text-sm text-gray-500 font-medium uppercase tracking-wide">Ver detalles</span>
            </div>
          </div>
        </a>
      )})}
    </div>
    
    <div class="mt-12 text-center md:hidden">
      <a href="/productos" class="text-pink-500 font-bold hover:text-pink-600">Ver todo el cat√°logo ‚Üí</a>
    </div>
  </div>
</Layout>