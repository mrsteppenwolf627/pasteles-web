---
import Layout from '../layouts/Layout.astro';
import { sanityClient } from 'sanity:client';
import { urlFor } from '../utils/image';

const products = await sanityClient.fetch(`*[_type == "product"] | order(_createdAt desc) {
  title,
  slug,
  price,
  images
}`);
---

<Layout title="Catálogo | Manoli Pasteles">
  <div class="bg-pink-50 py-12">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-serif font-bold text-gray-900 mb-4">
        Catálogo Completo
      </h1>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Descubre todas nuestras creaciones artesanales.
      </p>
    </div>
  </div>

  <div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
      {products.map((product) => (
        <a href={`/productos/${product.slug.current}`} class="group block">
          <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition duration-300 overflow-hidden border border-gray-100">
            
            <div class="aspect-square overflow-hidden bg-gray-100 relative">
              {product.images && product.images[0] ? (
                <img 
                  src={urlFor(product.images[0]).width(600).height(600).url()} 
                  alt={product.title}
                  class="w-full h-full object-cover transform group-hover:scale-105 transition duration-500"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center text-gray-400">Sin imagen</div>
              )}
              
              <div class="absolute bottom-4 right-4 bg-white/90 backdrop-blur-sm px-4 py-2 rounded-full font-bold text-pink-600 shadow-sm">
                {product.price}
              </div>
            </div>

            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-2 font-serif group-hover:text-pink-500 transition">
                {product.title}
              </h3>
              <span class="text-pink-500 font-bold text-sm uppercase tracking-wide border-b-2 border-transparent group-hover:border-pink-500 transition-all">
                Ver detalles
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>