---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { sanityClient, urlFor } from '../sanity';

// ---------------------------------------------------------
// CONFIGURACI√ìN: Tel√©fono de tu madre
const TELEFONO_MADRE = "34678846424"; 
// ---------------------------------------------------------

// 1. PEDIMOS LOS DATOS A SANITY
// Pedimos los datos m√°s recientes primero (order(_createdAt desc))
const query = `*[_type == "producto"] | order(_createdAt desc) {
  nombre,
  precio,
  descripcion,
  categoria,
  imagen
}`;

const productos = await sanityClient.fetch(query);
---

<Layout title="Cat√°logo de Pasteles">
  <Header />

  <main class="bg-gray-50 min-h-screen pb-20">
    <section class="bg-white shadow-sm py-12 mb-10 text-center px-4">
      <h1 class="text-4xl font-bold text-gray-800 mb-4">Elige tu Regalo Perfecto</h1>
      <p class="text-gray-500 max-w-2xl mx-auto">
        Dise√±os √∫nicos hechos a mano. Haz clic en el bot√≥n de WhatsApp para comprobar disponibilidad o personalizar tu pedido.
      </p>
    </section>

    <div class="container mx-auto px-4">
      
      {/* Aviso si no hay productos */}
      {productos.length === 0 && (
        <div class="text-center py-20 bg-white rounded-xl shadow-sm border border-gray-100">
          <p class="text-2xl mb-2">üì¶</p>
          <p class="text-xl text-gray-500 font-medium">Cargando cat√°logo...</p>
          <p class="text-sm text-gray-400 mt-2">(Si tarda mucho, revisa que hayas dado a "Publish" en el panel)</p>
        </div>
      )}

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        
        {productos.map((producto) => (
          <article class="bg-white rounded-xl shadow-md hover:shadow-2xl transition-all duration-500 border border-gray-100 flex flex-col h-full group overflow-hidden">
            
            {/* =================================================================================
                ZONA DE LA FOTO (CAMBIO CLAVE)
                Usamos Flexbox para centrar y 'max-h/w-full' para asegurar que se ve entera.
               ================================================================================= */}
            <div class="h-80 bg-white relative overflow-hidden border-b border-gray-50 flex items-center justify-center p-6">
              {producto.imagen ? (
                <img 
                  /* Pedimos a Sanity la imagen sin recortar (fit: max) */
                  src={urlFor(producto.imagen).width(800).height(800).fit('max').url()} 
                  alt={producto.nombre}
                  /* CLASES CLAVE:
                     - max-w-full max-h-full: Asegura que la imagen NUNCA sea m√°s grande que el contenedor (no se recorta).
                     - object-center: Se mantiene centrada.
                     - transition-transform duration-700: Zoom suave.
                     - group-hover:scale-110: El efecto zoom tipo Amazon al pasar el rat√≥n.
                  */
                  class="max-w-full max-h-full object-center transition-transform duration-700 group-hover:scale-110"
                />
              ) : (
                /* Placeholder si no hay imagen */
                <div class="text-6xl text-pink-200 opacity-50">üéÅ</div>
              )}
              
              {/* Etiqueta de categor√≠a */}
              <span class="absolute top-4 right-4 bg-white/95 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-bold text-gray-600 uppercase tracking-wide shadow-sm">
                {producto.categoria}
              </span>
            </div>

            {/* INFORMACI√ìN Y BOT√ìN */}
            <div class="p-6 flex flex-col flex-grow relative z-10 bg-white">
              <div class="flex-grow">
                <h2 class="text-xl font-bold text-gray-800 mb-2 leading-tight">{producto.nombre}</h2>
                <p class="text-sm text-gray-500 mb-4 line-clamp-3 leading-relaxed">
                  {producto.descripcion}
                </p>
              </div>
              
              <div class="pt-4 border-t border-gray-100 mt-auto">
                <div class="flex items-center justify-between mb-4">
                  <span class="text-sm text-gray-400 font-medium">Precio final</span>
                  <span class="text-3xl font-bold text-pink-500">{producto.precio}‚Ç¨</span>
                </div>

                <a 
                  href={`https://wa.me/${TELEFONO_MADRE}?text=Hola! Me interesa el modelo: ${producto.nombre} (${producto.precio}‚Ç¨). ¬øEst√° disponible?`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block w-full bg-[#25D366] hover:bg-[#20bd5a] text-white text-center font-bold py-3.5 rounded-xl transition-all shadow-md hover:shadow-lg flex items-center justify-center gap-2 group/btn"
                >
                  <svg class="w-5 h-5 fill-current group-hover/btn:scale-110 transition-transform" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
                  Pedir por WhatsApp
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </main>

  <Footer />
</Layout>