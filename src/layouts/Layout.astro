---
// Importamos los estilos globales
import '../styles/global.css';

// CORRECCIÓN: Usamos los nombres reales que tienes en tu carpeta (Header y Footer)
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Pasteles de pañales artesanales. Regalos únicos para bebés." } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | Pasteles de Pañales</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
  </head>
  <body class="bg-brand-bg text-brand-text min-h-screen flex flex-col">
    
    {/* AQUÍ PONEMOS EL HEADER (Antes fallaba porque buscaba 'Navbar') */}
    <Header />

    {/* El main envuelve el contenido para que ocupe el espacio central */}
    <main class="flex-grow">
      <slot />
    </main>

    {/* Y AQUÍ EL FOOTER */}
    <Footer />
    
  </body>
</html>