---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions'; // Transiciones suaves
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Pasteles de pa√±ales artesanales en Badalona.",
  image = "/social-image.jpg"
} = Astro.props;

const siteUrl = "https://manolipasteles.com";
const socialImageURL = new URL(image, Astro.url);
const canonicalURL = new URL(Astro.url.pathname, Astro.site || siteUrl);

const schema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "GiftShop",
  "name": "Manoli Pasteles",
  "description": description,
  "image": socialImageURL.href,
  "url": siteUrl,
  "telephone": "+34678846424",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Badalona",
    "addressRegion": "Barcelona",
    "addressCountry": "ES"
  },
  "priceRange": "$$"
});
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <ClientRouter />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:image" content={socialImageURL} />

    <script type="application/ld+json" set:html={schema} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
  </head>
  
  <body class="bg-gray-200 text-gray-800 min-h-screen flex flex-col font-sans relative">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />

